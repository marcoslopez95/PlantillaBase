{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "typeRoots": [
            "./node_modules/@types",
            "./resources/js/*.d.ts"
        ],
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "vite/client"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./resources/js/*"
            ],
            "ziggy-js/*": [
                "./vendor/tightenco/ziggy/dist/*"
            ],
            "ziggy/*": [
                "./vendor/tightenco/ziggy/dist/*"
            ]
        }
    },
    "include": [
        "./resources/**/*"
    ]
}
